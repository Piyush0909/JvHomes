@model JvHomes.Models.Login

@{
    Layout = null;
}

<!doctype html>
<html lang="en">

<!-- Mirrored from bootstrap.gallery/kingfisher/light-sidebar/login.html by HTTrack Website Copier/3.x [XR&CO'2014], Sat, 22 Dec 2018 07:18:07 GMT -->
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->

    <title>Login</title>

    <!--
        **********************
        **********************
        Common CSS files
        **********************
        **********************
    -->
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="../../AdminPanelCss/css/bootstrap.min.css" />
    <!-- Icomoon Icons CSS -->
    <link rel="stylesheet" href="../../AdminPanelCss/fonts/icomoon/icomoon.css" />
    <!-- Master CSS -->
    <link rel="stylesheet" href="../../AdminPanelCss/css/main.css" />
</head>
<body>
    <!-- Container start -->
    <div class="container">

        @using (Html.BeginForm("Login", "Home", FormMethod.Post, new { @id = "form1", enctype = "multipart/form-data" }))
        {

            <div class="row justify-content-md-center">
                <div class="col-xl-4 col-lg-5 col-md-6 col-sm-12">
                    <div class="login-screen logintop">
                        <div class="login-box">
                            <a href="#" class="login-logo">
                                <img src="../../AdminPanelCss/img/logo-dark.png" alt="VNV INFRA STRCUTURE" />
                            </a>
                            <div class="form-group">
                                @Html.TextBoxFor(m => m.loginId, new { @class = "form-control", @placeholder = "Login Id" })

                            </div>
                            <div class="form-group">
                                @Html.PasswordFor(m => m.password, new { @class = "form-control", @placeholder = "Password" })
                            </div>
                            <div class="actions">
                                <input type="submit" class="btn btn-primary btn-block" value="Login" onclick="return fvalidate();" />
                                <p style="color:red">@TempData["Login"]</p>
                                @*<a href="forgot-pwd.html">Forgot password?</a>*@
                            </div>
                            <div class="mt-4">
                                <a href="#" class="additional-link" data-toggle="modal" data-target="#myModal">Forget Password</a>
                                <a href="/Home/PlotAvailbility" class="additional-link">Plot <span>Availbility</span></a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal fade" id="myModal" role="dialog" style="display: none">
                <div class="modal-dialog">

                    <!-- Modal content-->
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" onclick="closeModal();">&times;</button>

                        </div>
                        <div class="modal-body" style="color: black">
                            <div class="row">
                                <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12">

                                    <div class="form-group">

                                        <input type="text" class="form-control" placeholder="LoginId" id="login" />
                                    </div>

                                    <div class="mt-4">

                                        <a href="#" class="btn btn-success" onclick="return getpassword();">Get <span>Password</span></a>
                                    </div>

                                </div>
                            </div>
                        </div>
                        @*<div class="modal-footer">
                                <button type="button" class="btn btn-default" data-dismiss="modal" onclick="closeModal();">Close</button>
                            </div>*@
                    </div>

                </div>
            </div>
        }
    </div>


    <!-- Container end -->
</body>
<!-- Mirrored from bootstrap.gallery/kingfisher/light-sidebar/login.html by HTTrack Website Copier/3.x [XR&CO'2014], Sat, 22 Dec 2018 07:18:07 GMT -->
</html>
<script src="../../assets/js/jquery.min.js"></script>
<script src="../../AdminPanelCss/js/bootstrap.min.js"></script>
<script>
    function fvalidate() {
        $(".errortext").removeClass("errortext");
        if ($('#loginId').val() == '') {
            $("#loginId").addClass('errortext');
            $('#loginId').focus();
            return false;
        }
        if ($('#password').val() == '') {
            $("#password").addClass('errortext');
            $('#password').focus();
            return false;
        }


    }
    function getpassword() {
        if ($('#login').val() == '') {
            $("#login").addClass('errortext');
            $('#login').focus();
            return false;
        }
        $.ajax({
            url: "/Home/GetPassword",
            Type: "Get",
            DataType: "JSON",
            data: { LoginId: $("#login").val() },
            success: function (data) {
                if (data.Result == "1") {
                    alert("Password Send on your registered mobile No.");
                }
                else {
                    alert("Invalid LoginId");
                }


            }

        });
    }
</script>
