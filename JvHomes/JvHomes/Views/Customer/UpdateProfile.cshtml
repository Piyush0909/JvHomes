@model JvHomes.Models.UpdateProfile

@{
    ViewBag.Title = "UpdateProfile";
    Layout = "~/Views/Shared/CustomerLayout.cshtml";
}
@using (Html.BeginForm("UpdateProfile", "Customer", FormMethod.Post, new { @id = "form1", enctype = "multipart/form-data" }))
{
    <div class="wrapper">
        <div class="container-fluid">
            <!-- Page-Title -->
            <div class="page-title-box">
                <div class="row align-items-center">
                    <div class="col-sm-6">
                        <h4 class="page-title">Update Profile</h4>
                    </div>
                    <div class="col-sm-6">
                        <ol class="breadcrumb float-right">
                            <li class="breadcrumb-item active">Profile</li>
                            <li class="breadcrumb-item active">Update Profile</li>
                        </ol>
                    </div>
                </div>
                <!-- end row -->
            </div>
            <div class="main-content">
                <div class="row">
                    <div class="col-xl-4 col-lg col-md-4 col-sm-4 col-12">
                        <div class="form-group">
                            <label>First Name</label>
                            @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control", @placeholder = "First Name" })
                        </div>
                    </div>
                    <div class="col-xl-4 col-lg col-md-4 col-sm-4 col-12">
                        <div class="form-group">
                            <label>Last Name</label>
                            @Html.TextBoxFor(m => m.LastName, new { @class = "form-control", @placeholder = "Last Name" })

                        </div>
                    </div>
                    <div class="col-xl-4 col-lg col-md-4 col-sm-4 col-12">
                        <div class="form-group">
                            <label>Mobile No</label>
                            @Html.TextBoxFor(m => m.Mobile, new { @class = "form-control", @placeholder = "Mobile No", @readonly = "re" })

                        </div>
                    </div>
                </div>
                <div class="row gutters">
                    <div class="col-xl-4 col-lg col-md-4 col-sm-4 col-12">
                        <div class="form-group">
                            <label>Email</label>
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @placeholder = "Email" })
                        </div>
                    </div>
                    <div class="col-xl-4 col-lg col-md-4 col-sm-4 col-12">
                        <div class="form-group">
                            <label>Account No</label>
                            @Html.TextBoxFor(m => m.AccountNo, new { @class = "form-control", @placeholder = "Account No" })

                        </div>
                    </div>
                    <div class="col-xl-4 col-lg col-md-4 col-sm-4 col-12">
                        <div class="form-group">
                            <label>Bank Name</label>
                            @Html.TextBoxFor(m => m.BankName, new { @class = "form-control", @placeholder = "Bank Name" })

                        </div>
                    </div>
                </div>
                <div class="row gutters">
                    <div class="col-xl-4 col-lg col-md-4 col-sm-4 col-12">
                        <div class="form-group">
                            <label>Bank Branch</label>
                            @Html.TextBoxFor(m => m.BankBranch, new { @class = "form-control", @placeholder = "Bank Branch" })
                        </div>
                    </div>
                    <div class="col-xl-4 col-lg col-md-4 col-sm-4 col-12">
                        <div class="form-group">
                            <label>IFSC</label>
                            @Html.TextBoxFor(m => m.IFSC, new { @class = "form-control", @placeholder = "IFSC" })

                        </div>
                    </div>
                    <div class="col-xl-4 col-lg col-md-4 col-sm-4 col-12">
                        <div class="form-group">
                            <label>Profile Pic</label>
                            <input type="file" name="postedFile" id="Image" />
                        </div>
                    </div>
                </div>
                <div class="row">

                    <div class="col-xl-6 col-lg col-md-6 col-sm-6 col-12">
                        <div class="form-group">
                            <br />
                            <input class="btn btn-success" type="submit" onclick="return validateform();" value="Update Profile" id="btnchange" name="Update Profile" />

                        </div>
                    </div>
                </div>
                <div class="row">
                    <p style="color:red">@TempData["Profile"] </p>
                </div>
            </div>
        </div>
    </div>

}
<script src="../../Scripts/jquery-1.10.2.min.js"></script>

<script>
    $(document).ready(function () {
        $("#divload").css({ 'display': 'none' });
    });
    function validateform() {

        $(".errortext").removeClass("errortext");


        if ($('#FirstName').val() == '') {
            $("#FirstName").addClass('errortext');
            $('#FirstName').focus();
            return false;
        }
        if ($('#LastName').val() == '') {
            $("#LastName").addClass('errortext');
            $('#LastName').focus();
            return false;
        }
        if ($('#Mobile').val() == '') {
            $("#Mobile").addClass('errortext');
            $('#Mobile').focus();
            return false;
        }
        if ($('#AccountNo').val() == '') {
            $("#AccountNo").addClass('errortext');
            $('#AccountNo').focus();
            return false;
        }
        if ($('#BankName').val() == '') {
            $("#BankName").addClass('errortext');
            $('#BankName').focus();
            return false;
        }
        if ($('#BankBranch').val() == '') {
            $("#BankBranch").addClass('errortext');
            $('#BankBranch').focus();
            return false;
        }
        if ($('#IFSC').val() == '') {
            $("#IFSC").addClass('errortext');
            $('#IFSC').focus();
            return false;
        }

        $("#divload").css({ 'display': '' });
        return true;
    }
</script>