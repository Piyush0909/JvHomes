@model JvHomes.Models.EmployeeRegistrations

@{
    ViewBag.Title = "EmployeeDetails";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}



@using (Html.BeginForm("EmployeeDetails", "EmployeeRegistration", FormMethod.Post, new { @id = "form1" }))
{
    <div class="wrapper">
        <div class="container-fluid">
            <!-- Page-Title -->
            <div class="page-title-box">
                <div class="row align-items-center">
                    <div class="col-sm-6">
                        <h4 class="page-title">Permission</h4>
                    </div>
                    <div class="col-sm-6">
                        <ol class="breadcrumb float-right">

                            <li class="breadcrumb-item active">User List</li>
                        </ol>
                    </div>
                </div>
                <!-- end row -->
            </div>
            <div class="row">
                <div class="col-md-12 table-responsive">
                    <table id="example23" class="display nowrap table table-hover table-striped table-bordered" cellspacing="0" width="100%">
                        <thead>
                            <tr>
                                <th>Sr No.</th>
                                <th>Name</th>
                                <th> Login Id</th>
                                <th> Password</th>
                                <th>Qualififcation</th>
                                <th>Contact No</th>
                                <th>Email Id</th>
                                <th>Action</th>

                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null)
                            {
                                if (Model.lstemp != null)
                                {
                                    int i = 1;
                                    foreach (var item in Model.lstemp)
                                    {

                                        <tr>
                                            <td>@i</td>
                                            <td>@item.Name</td>
                                            <td>@item.LoginId</td>
                                            <td>@JvHomes.Crypto.Decrypt(item.Password)</td>
                                            <td>@item.EducationQualififcation</td>
                                            <td>@item.Mobile</td>
                                            <td>@item.Email</td>
                                            <td>
                                                <a href="/Permission/EmployeeRegistration?PK_UserID=@item.PK_UserID" class="btn btn-sm btn-success">Edit</a>

                                                <a href="/Permission/DeleteEmployee?PK_UserID=@item.PK_UserID" class="btn btn-sm btn-danger " onclick="return confirm('Are you sure you want to delete it?')">Delete</a>


                                            </td>

                                        </tr>

                                        i++;
                                    }
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

}

