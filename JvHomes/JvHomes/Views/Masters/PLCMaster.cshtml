@model JvHomes.Models.Master

@{
    ViewBag.Title = "PLCMaster";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}





@using (Html.BeginForm("PLCMaster", "Masters", FormMethod.Post, new { @id = "form1", enctype = "multipart/form-data" }))
{
    <div class="wrapper">
<div class="container-fluid">
    <!-- Page-Title -->
    <div class="page-title-box">
        <div class="row align-items-center">
            <div class="col-sm-6">
                <h4 class="page-title">Masters</h4>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-right">

                    <li class="breadcrumb-item active">Add PLC</li>
                </ol>
            </div>
        </div>
        <!-- end row -->
    </div>
    <div class="row">
       
            <div class="col-sm-6">
                <label class="float-label">PLC Name<span style="color:red">*</span></label>
                @Html.TextBoxFor(m => m.PLCName, new { @class = "form-control", @Placeholder = "PLC Name" })
                <span class="form-bar"></span>
            </div>
            <div class="col-sm-6">
                <label class="float-label">PLC Charge(%)<span style="color:red">*</span></label>
                @Html.TextBoxFor(m => m.PLCCharge, new { @class = "form-control" })
                @Html.HiddenFor(m=>m.PLCID)
            </div>
    </div>

    <div class="form-group row">

        <div class="col-md-6">
            <br />
            @if (Model.PLCID == null)
                                        {
            <input class="btn btn-success pull-left" type="submit" onclick="return validateform();" value="Save" id="btnSave" name="btnSave" />
                                        }
                                        else
                                        {
            @Html.HiddenFor(m => m.BlockID, new { @Value = @Model.BlockID })
            <input class="btn btn-success pull-left" type="submit" onclick="return validateform();" value="Update" id="btnUpdate" name="btnUpdate" />
                                        }
            <a class="btn btn-info" href="/Masters/PLCList">Back To List</a>
            <p style="color:red">@TempData["PLCMaster"]</p>
        </div>


    </div>
</div>
</div>


}

<script>
    function validateform() {
        $(".errortext").removeClass("errortext");

        if ($('#PLCName').val() == '') {
            $("#PLCName").addClass('errortext');
            $('#PLCName').focus();
            return false;
        }
        if ($('#PLCCharge').val() == '') {
            $("#PLCCharge").addClass('errortext');
            $('#PLCCharge').focus();
            return false;
        }


        return true;
    }
</script>