@model JvHomes.Models.Customer
@{
    ViewBag.Title = "CustomerList";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
@using (Html.BeginForm("CustomerList", "Admin", FormMethod.Post, new { @id = "form1" }))
{
<div class="wrapper">
    <div class="container-fluid">
        <!-- Page-Title -->
        <div class="page-title-box">
            <div class="row align-items-center">
                <div class="col-sm-6">
                    <h4 class="page-title">Customer</h4>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-right">

                        <li class="breadcrumb-item active">Customer List</li>
                    </ol>
                </div>
            </div>
            <!-- end row -->
        </div>
        <div class="row">
            <div class="col-sm-3">
                <label class="float-label">Customer LoginId</label>
                @Html.TextBoxFor(m => m.CustomerLoginID, new { @class = "form-control", @Placeholder = "Sponsor LoginID" })
                <span class="form-bar"></span>
            </div>
            <div class="col-sm-3">
                <label class="float-label">Customer Name </label>
                @Html.TextBoxFor(m => m.CustomerName, new { @class = "form-control", @Placeholder = "Sponsor Name" })
                <span class="form-bar"></span>
            </div>
            <div class="col-sm-3">
                <label class="float-label">Associate LoginId</label>
                @Html.TextBoxFor(m => m.AssociateID, new { @class = "form-control", @Placeholder = "Search by AssociateID" })
                <span class="form-bar"></span>
            </div>
            <div class="col-sm-3">
                <label class="float-label">Associate Name</label>
                @Html.TextBoxFor(m => m.AssociateName, new { @class = "form-control", @Placeholder = "Associate Name" })
                <span class="form-bar"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-3">
                <label class="float-label">Joining From Date</label>
                @Html.TextBoxFor(m => m.JoiningFromDate, new { @class = "form-control", @Placeholder = "From Date" })
                <span class="form-bar"></span>
            </div>
            <div class="col-sm-3">
                <label class="float-label">Joining To Date</label>
                @Html.TextBoxFor(m => m.JoiningToDate, new { @class = "form-control", @Placeholder = "To Date" })
                <span class="form-bar"></span>
            </div>
            <div class="col-sm-3">
                <br/>
                <input class="btn btn-success" type="submit" value="Search" id="btnSearchCustomer" name="btnSearchCustomer" />
            </div>
        </div>

        <div class="dt-responsive table-responsive">
            <table id="example23" class="table table-striped table-bordered nowrap">
                <thead>
                    <tr>
                        <th>S No.</th>
                        <th>Customer ID</th>
                        <th>Customer Name</th>
                        <th>Password</th>
                        <th>Associate ID</th>
                        <th>Associate Name</th>
                        <th>JoiningDate</th>
                        <th>Mobile Number</th>
                        <th>Email</th>
                        <th>Pan</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null)
                    {
                        if (Model.ListCust != null)
                        {
                            int i = 1;
                            foreach (var Item in Model.ListCust)
                            {
                    <tr class="text-left">
                        <td>@i</td>
                        <td>@Item.LoginID</td>
                        <td>@Item.FirstName @Item.LastName</td>
                        <td>@Item.Password  </td>
                        <td>@Item.sponserId  </td>
                        <td>@Item.sponsorName </td>

                        <td>@Item.JoiningDate</td>
                        <td>@Item.Contact</td>
                        <td>@Item.Email</td>
                        <td>@Item.PanNo</td>
                        <td>
                            <a href="/Admin/CustomerRegistration?UserID=@Item.EncryptKey" class="btn btn-info btn-sm">Edit</a>
                            <a href="/Admin/DeleteCustomer?UserID=@Item.UserID" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this Customer?');">Delete</a>

                    </tr>
                                i++;
                            }
                        }
                    }
                </tbody>

            </table>
        </div>
    </div>
</div>
            
}
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="//code.jquery.com/ui/1.11.4/jquery-ui.js"></script>
    <link rel="stylesheet" type="text/css" href="https://code.jquery.com/ui/1.12.0/themes/smoothness/jquery-ui.css">

    <script>


        $('#JoiningFromDate').datepicker({
            dateFormat: 'dd/mm/yy',
            changeYear: true,
            changeMonth: true
        });
        $('#JoiningToDate').datepicker({
            dateFormat: 'dd/mm/yy',
            changeYear: true,
            changeMonth: true
        });

    </script>
