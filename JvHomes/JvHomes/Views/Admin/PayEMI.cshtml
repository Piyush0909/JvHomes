                                    <div class="col-md-3">
                                        <div class="form-group">
                                            <label> <b>Customer Name :</b></label>
                                            <input type="text" class="form-control" value="@Model.CustomerName" disabled="disabled" />

                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-3">
                                        <div class="form-group">
                                            <label><b>Plot Rate :</b></label>
                                            <input type="text" class="form-control" value="@Model.PlotRate" disabled="disabled" />

                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="form-group">
                                            <label><b>Plot Area :</b></label>
                                            <input type="text" class="form-control" value="@Model.PlotArea" disabled="disabled" />
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="form-group">
                                            <label><b>Actual Plot Amount :</b></label>
                                            <input type="text" class="form-control" value="@Model.PlotAmount" disabled="disabled" />
                                        </div>
                                    </div>

                                    <div class="col-md-3">
                                        <div class="form-group">
                                            <label><b>Discount :</b></label>
                                            <input type="text" class="form-control" value="@Model.Discount" disabled="disabled" />

                                        </div>
                                    </div>
                                </div>
                                <div class="row">

                                    <div class="col-md-3">
                                        <div class="form-group">
                                            <label><b>Booking Amount :</b></label>
                                            <input type="text" class="form-control" value="@Model.BookingAmount" disabled="disabled" />
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="form-group">
                                            <label><b>Booking Date :</b></label>
                                            <input type="text" class="form-control" value="@Model.BookingDate" disabled="disabled" />
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="form-group">
                                            <label><b>Paid Amount:</b></label>
                                            <input type="text" class="form-control" value="@Model.PaidAmount" disabled="disabled" />
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="form-group">
