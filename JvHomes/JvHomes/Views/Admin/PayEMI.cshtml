                                            </tr>
                                        </thead>
                                        <tbody>
                                            @if (Model != null)
                                            {
                                                if (Model.lstPlot != null)
                                                {
                                                    foreach (var item in Model.lstPlot)
                                                    {
                                                        <tr>
                                                            <td>
                                                                @item.InstallmentNo
                                                            </td>
                                                            <td>
                                                                @item.InstallmentDate
                                                            </td>
                                                            <td>
                                                                @item.InstallmentAmount
                                                            </td>
                                                            <td>
                                                                @item.PaidAmount
                                                            </td>
                                                            <td>
                                                                @item.PaymentDate
                                                            </td>
                                                            <td>
                                                                @item.DueAmount
                                                            </td>
                                                            <td>
                                                                @item.PaymentMode
                                                            </td>
                                                        </tr>
                                                    }
                                                }
                                            }
                                        </tbody>
                                    </table>
                                </div>
                                <div class="row">
                                    <div class="col-md-12">
                                        <p style="color:red">@TempData["PayEMI"]</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }

            }


        </div>
    </div>
  

}
<script src="../../Scripts/jquery-1.10.2.min.js"></script>
<script src="//code.jquery.com/ui/1.11.4/jquery-ui.js"></script>
<link rel="stylesheet" type="text/css" href="https://code.jquery.com/ui/1.12.0/themes/smoothness/jquery-ui.css">

<script>
    $('#PaymentDate').datepicker({
        dateFormat: 'dd/mm/yy',
        maxDate: 0,
        changeYear: true,
        changeMonth: true
    });
    $('#TransactionDate').datepicker({
        dateFormat: 'dd/mm/yy',
        changeYear: true,
        changeMonth: true,

    });
    $('#BookingDate').datepicker({
        dateFormat: 'dd/mm/yy',
        maxDate: 0,
        changeYear: true,
        changeMonth: true
    });
    $(document).ready(function () {
        $("#divload").css({ 'display': 'none' });





    });
    function validatePayAmount() {
        debugger
        var balanceAmount = document.getElementById("bal").innerHTML;
        var payAmount = $('#PaidAmount').val();

        if ((Number)(payAmount) > (Number)(balanceAmount)) {
            $("#PaidAmount").val('');
            $("#PaidAmount").addClass('errortext');
            alert('Pay Amount cannot be greater than Remaining Amount.\nRemaining Amount is : Rs.' + balanceAmount);
        }
        else {
            $("#PaidAmount").removeClass('errortext');
        }
    }
    function isNumberOrDecimal(evt) {
        var charCode = (evt.which) ? evt.which : evt.keyCode;
        if (charCode != 46 && charCode > 31
            && (charCode < 48 || charCode > 57))
            return false;

        return true;
    }

    function onlyAlphabets(e, t) {
        try {
            if (window.event) {
                var charCode = window.event.keyCode;
            }
            else if (e) {
                var charCode = e.which;
            }
            else { return true; }
            if ((charCode > 64 && charCode < 91) || (charCode > 96 && charCode < 123))
                return true;
            else
                return false;
        }
        catch (err) {
            alert(err.Description);
        }
    }
    function CheckPayMode() {
        debugger
        if ($('#PaymentMode').val() != '1' && $('#PaymentMode').val() != '7' && $('#PaymentMode').val() != '8') {
            $("#divPaymentMode").show();
            if ($('#PaymentMode').val() == '9') {
                $('#creditdebit').html('Credit To');
            }
            else {
                $('#creditdebit').html('Credit To');
            }
        }
        else {
            $('#TransactionNumber').val('');
            $('#TransactionDate').val('');
            $('#BankName').val('');
            $('#BankBranch').val('');
            $("#divPaymentMode").hide();
        }

    }
    function validateform() {
        $(".errortext").removeClass("errortext");

        if ($('#PaidAmount').val() == '') {
            $("#PaidAmount").addClass('errortext');
            $('#PaidAmount').focus();
            return false;
        }
        if ($('#PaymentDate').val() == '') {
            $("#PaymentDate").addClass('errortext');
            $('#PaymentDate').focus();
            return false;
        }
        if ($('#PaymentMode').val() == '0') {
            $("#PaymentMode").addClass('errortext');
            $('#PaymentMode').focus();
            return false;
        }
        if ($('#ReceiptNo').val() == '') {
            $("#ReceiptNo").addClass('errortext');
            $('#ReceiptNo').focus();
            return false;
        }


        if ($('#PaymentMode').val() != '1' && $('#PaymentMode').val() != '7' && $('#PaymentMode').val() != '8') {
            if ($('#TransactionNumber').val() == '') {
                $("#TransactionNumber").addClass('errortext');
                $('#TransactionNumber').focus();
                return false;
            }
            if ($('#TransactionDate').val() == '') {
                $("#TransactionDate").addClass('errortext');
                $('#TransactionDate').focus();
                return false;
            }
            if ($('#BankName').val() == '') {
                $("#BankName").addClass('errortext');
                $('#BankName').focus();
                return false;
            }
            if ($('#BankBranch').val() == '') {
                $("#BankBranch").addClass('errortext');
                $('#BankBranch').focus();
                return false;
            }
        }
        return true;
    }
    function onSiteChange() {
        $("#divload").css({ 'display': '' });
        var value = $('#SiteID').val();
        var values = $('#SectorID').val();
        var tr = [];
        $.ajax({
            url: "/Masters/GetSiteDetails",
            Type: "Get",
            DataType: "JSON",
            data: { SiteID: value },
            success: function (data) {
                $("#divload").css({ 'display': 'none' });
                var j = 1;
                if (data.Result == "yes") {

                    $("#SectorID").html(""); // clear before appending new list
                    $("#SectorID").empty();
                    $("#SectorID").append(
                        $('<option></option>').val(0).html('Select Sector'));
                    $.each(data.ddlSector, function (index, Sectorcount) {
                        $("#SectorID").append(
                            $('<option></option>').val(Sectorcount.Value).html(Sectorcount.Text));

                    });
                }
                else {
                    $("#SectorID").empty();

                }
            }

        });

    }

    function onSectorChange() {

        $("#divload").css({ 'display': '' });
        var siteID = $('#SiteID').val();
        var sectorID = $('#SectorID').val();
        $.ajax({
            url: '/Masters/GetBlockList', type: 'post', dataType: 'json',
            data: { 'SiteID': siteID, 'sectorID': sectorID },
            success: function (data) {
                $("#divload").css({ 'display': 'none' });
                $("#BlockID").html(""); // clear before appending new list
                $("#BlockID").empty();
                $("#BlockID").append(
                    $('<option></option>').val(0).html('Select Block'));
                $.each(data.lstBlock, function (index, BlockCount) {
                    $("#BlockID").append(
                        $('<option></option>').val(BlockCount.Value).html(BlockCount.Text));
                });

            }

        });
    }
</script>
