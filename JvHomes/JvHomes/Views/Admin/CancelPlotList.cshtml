@model JvHomes.Models.Reports

@{
    ViewBag.Title = "CancelPlotList";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}



@using (Html.BeginForm("CancelPlotList", "Admin", FormMethod.Post, new { @id = "form1" }))
{
    <div class="wrapper">
        <div class="container-fluid">
            <!-- Page-Title -->
            <div class="page-title-box">
                <div class="row align-items-center">
                    <div class="col-sm-6">
                        <h4 class="page-title">Reports</h4>
                    </div>
                    <div class="col-sm-6">
                        <ol class="breadcrumb float-right">

                            <li class="breadcrumb-item active">Cancel Plot List</li>
                        </ol>
                    </div>
                </div>
                <!-- end row -->
            </div>
            <div class="row">
                <div class="col-md-2">
                    <div class="form-group">
                        Customer ID
                        @Html.TextBoxFor(m => m.LoginId, new { @class = "form-control", @Placeholder = "Search by Customer ID" })
                    </div>
                </div>
                <div class="col-md-2">
                    <div class="form-group">
                        Associate ID
                        @Html.TextBoxFor(m => m.SponsorId, new { @class = "form-control", @Placeholder = "Search by Associate ID" })
                    </div>
                </div>

                <div class="col-md-2">
                    <div class="form-group">
                        From Date
                        @Html.TextBoxFor(m => m.FromDate, new { @class = "form-control", @Placeholder = "From Date", @readonly = "readonly" })
                    </div>
                </div>
                <div class="col-md-2">
                    <div class="form-group">
                        To Date
                        @Html.TextBoxFor(m => m.Todate, new { @class = "form-control", @Placeholder = "To Date", @readonly = "readonly" })
                    </div>
                </div>
                <div class="col-md-2">
                    <div class="form-group">
                        Booking No
                        @Html.TextBoxFor(m => m.BookingNumber, new { @class = "form-control", @Placeholder = "Booking No" })
                    </div>
                </div>
                <div class="col-md-2">
                    <div class="form-group">
                        Select Site
                        @Html.DropDownListFor(m => m.SiteID, new SelectList(ViewBag.ddlSite, "Value", "Text"), new { @class = "form-control", @onchange = "return onSiteChange();" })
                    </div>
                </div>
                <div class="col-md-2">
                    <div class="form-group">
                        Select Sector
                        @Html.DropDownListFor(m => m.SectorID, new SelectList(ViewBag.ddlSector, "Value", "Text"), new { @class = "form-control", @onchange = "return onSectorChange();" })
                    </div>
                </div>
                <div class="col-md-2">
                    <div class="form-group">
                        Select Block
                        @Html.DropDownListFor(m => m.BlockID, new SelectList(ViewBag.ddlBlock, "Value", "Text"), new { @class = "form-control" })
                    </div>
                </div>
                <div class="col-md-2">
                    <div class="form-group">
                        Plot Number
                        @Html.TextBoxFor(m => m.PlotNumber, new { @class = "form-control", @Placeholder = "PlotNumber" })
                    </div>
                </div>
                <div class="col-md-2">
                    <div class="form-group">
                        <br />
                        <input class="btn btn-success" type="submit" value="Search" id="btnSearch" name="Search" />
                    </div>
                </div>
            </div>
            <div class="dt-responsive table-responsive">
                <table id="example23" class="table table-striped table-bordered nowrap">
                    <thead>
                        <tr>
                            <th>S No.</th>
                            <th>Booking No</th>

                            <th>Customer Name</th>
                            <th>AssociateName</th>
                            <th>Plot No.</th>
                            <th>Booking Date</th>
                            <th>Cancel  Date</th>
                            <th>Refund Amount</th>
                            <th>Cancel Remark</th>

                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null)
                        {
                            if (Model.lstDetails != null)
                            {
                                int j = 1;
                                if (Model.lstDetails.Rows.Count > 0)
                                {
                                    for (int i = 0; i <= Model.lstDetails.Rows.Count - 1; i++)
                                    {
                                        <tr class="text-left">
                                            <td>@j</td>
                                            <td>
                                                @Model.lstDetails.Rows[i]["BookingNo"].ToString()
                                            </td>
                                            <td>
                                                @Model.lstDetails.Rows[i]["CustomerName"].ToString()
                                            </td>
                                            <td>
                                                @Model.lstDetails.Rows[i]["AssociateName"].ToString()
                                            </td>
                                            <td>
                                                @Model.lstDetails.Rows[i]["PlotInfo"].ToString()
                                            </td>
                                            <td>
                                                @Model.lstDetails.Rows[i]["BookingDate"].ToString()
                                            </td>
                                            <td>
                                                @Model.lstDetails.Rows[i]["CancelDate"].ToString()
                                            </td>
                                            <td>
                                                @Model.lstDetails.Rows[i]["RefundAmount"].ToString()
                                            </td>
                                            <td>
                                                @Model.lstDetails.Rows[i]["CancelRemark"].ToString()
                                            </td>
                                        </tr>
                                        j++;
                                    }
                                }

                            }
                        }

                    </tbody>

                </table>
            </div>
        </div>
    </div>


}
